<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login App</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>


    {{#if user}}
      <a href="/">Dashboard</a>
      <a href="/users/logout">Logout</a>
    {{else}}
      <a href="/users/login">Login</a>
      <a href="/users/register">Register</a>
    {{/if}}

    <br><br>

    {{#if success_msg}}
      {{success_msg}}
    {{/if}}
    {{#if error_msg}}
      {{error_msg}}
    {{/if}}
    {{#if error}}
      {{error}}
    {{/if}}

    {{{body}}}

  </body>
</html>
